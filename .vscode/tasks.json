{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build NBody",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-std=c++17",
                "-O2",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/body.cpp",
                "${workspaceFolder}/simulator.cpp",
                "-o",
                "${workspaceFolder}/nbody.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run NBody",
            "type": "shell",
            "command": "${workspaceFolder}/nbody.exe",
            "dependsOn": "Build NBody",
            "problemMatcher": []
        }
    ]
}